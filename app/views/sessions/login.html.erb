<div class="container-fluid">
	<h2> Login </h2>
  
  <% if @errors && @errors.any? %>
    <ul>
      <% @errors.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= bootstrap_form_for(:session, url: login_path, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-4") do |f| %>
	  <%= f.email_field :email %>
	  <%= f.password_field :password %>
	  <%= f.form_group do %>
      <%= f.submit 'login' %>
    <% end %>
	<% end %>
</div>